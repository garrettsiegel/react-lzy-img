{
  "name": "react-lzy-img",
  "version": "0.3.3",
  "type": "module",
  "description": "Lightweight (~1.4KB gzipped) React lazy loading library with responsive images, blurhash placeholders, and TypeScript support. Simple, fast, and feature-complete.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/garrettsiegel/react-lzy-img.git"
  },
  "homepage": "https://www.reactlzyimg.online",
  "bugs": {
    "url": "https://github.com/garrettsiegel/react-lzy-img/issues"
  },
  "author": "Garrett Siegel <garrettsiegel@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "react",
    "react-component",
    "lazy-loading",
    "lazyload",
    "lazy-image",
    "responsive-images",
    "progressive-image",
    "blurhash",
    "lqip",
    "placeholder",
    "intersection-observer",
    "image-performance",
    "react-hook",
    "picture-element",
    "typescript",
    "lightweight",
    "performance",
    "fade-animation",
    "accessibility",
    "tree-shakeable",
    "bundle-size",
    "srcset",
    "webp",
    "modern-images"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && vite build --mode production",
    "build:demo": "vite build --mode demo",
    "prepublishOnly": "npm run build",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "blurhash": "^2.0.5"
  },
  "peerDependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "daisyui": "^5.5.14",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "happy-dom": "^20.1.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  }
}
